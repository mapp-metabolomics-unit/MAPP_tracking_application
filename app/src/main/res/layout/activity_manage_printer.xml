<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ListView
        android:id="@+id/printerListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/choosePrinter"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/printerNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/choosePrinter"
        android:layout_width="353dp"
        android:layout_height="131dp"
        android:text="Actually only available for brady m211. Make sure your printer is on and bluetooth blue light is blinking, then select your printer"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
    android:gravity="center"
    tools:ignore="HardcodedText,MissingConstraints,TextSizeCheck" />

</androidx.constraintlayout.widget.ConstraintLayout>